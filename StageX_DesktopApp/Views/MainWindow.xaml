<Window x:Class="StageX_DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
        xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
        
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="#FF1A1A1A" Foreground="White" WindowState="Maximized">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <util:MenuBackgroundConverter x:Key="BgConverter"/>
        <util:MenuForegroundConverter x:Key="FgConverter"/>
        <util:MenuFontWeightConverter x:Key="FontConverter"/>

        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!--Tạo grid phân chia thanh menu và phần chính -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="0,10,10,0">
            <StackPanel>
                <TextBlock Text="StageX" Foreground="#FFffc107" FontSize="24" FontWeight="Bold" Margin="20" TextAlignment="Center"/>
                <!--Hiển thị các button nếu là Admin -->
                <StackPanel Visibility="{Binding AdminVisibility}">
                    <Button Content="Báo cáo thống kê" Command="{Binding NavigateDashboardCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Dashboard'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Dashboard'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Dashboard'}"/>

                    <Button Content="Quản lý Suất diễn" Command="{Binding NavigatePerformanceCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Performance'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Performance'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Performance'}"/>

                    <Button Content="Quản lý Vở diễn" Command="{Binding NavigateShowCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Show'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Show'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Show'}"/>

                    <Button Content="Quản lý Rạp &amp; Ghế" Command="{Binding NavigateTheaterCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Theater'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Theater'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Theater'}"/>

                    <Button Content="Quản lý Diễn viên" Command="{Binding NavigateActorCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Actor'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Actor'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Actor'}"/>

                    <Button Content="Quản lý Thể loại" Command="{Binding NavigateGenreCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Genre'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Genre'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Genre'}"/>

                    <Button Content="Quản lý Tài khoản" Command="{Binding NavigateAccountCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Account'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Account'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Account'}"/>
                </StackPanel>
                <!--Hiển thị các button nếu là Nhân viên -->
                <StackPanel Visibility="{Binding StaffVisibility}">
                    <Button Content="Bán vé" Command="{Binding NavigateSellTicketCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='SellTicket'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='SellTicket'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='SellTicket'}"/>

                    <Button Content="Quản lý Đơn hàng &amp; In vé" Command="{Binding NavigateBookingCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Booking'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Booking'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Booking'}"/>
                    
                    <Button Content="Quản lý vé" Command="{Binding NavigateTicketScanCommand}" Style="{StaticResource MenuBtnStyle}"
                            Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='TicketScan'}"
                            Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='TicketScan'}"
                            FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='TicketScan'}"/>
                </StackPanel>
                <!--Hiển thị các button hồ sơ cá nhân với cả 2 role -->
                <Separator Background="#333" Margin="10,20"/>
                <Button Content="Hồ sơ cá nhân" Command="{Binding NavigateProfileCommand}" Style="{StaticResource MenuBtnStyle}"
                        Background="{Binding SelectedMenu, Converter={StaticResource BgConverter}, ConverterParameter='Profile'}"
                        Foreground="{Binding SelectedMenu, Converter={StaticResource FgConverter}, ConverterParameter='Profile'}"
                        FontWeight="{Binding SelectedMenu, Converter={StaticResource FontConverter}, ConverterParameter='Profile'}"/>
                <!--Hiển thị các button đăng xuất với cả 2 role -->
                <Button Content="Đăng xuất" Command="{Binding LogoutCommand}" Margin="10,10,10,10" Padding="15,10" FontWeight="SemiBold" Background="#FFDC3545" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
        <!--Hiển thị các view cụ thể được chọn -->
        <Border Grid.Column="1" Background="#FF1A1A1A" Margin="10" CornerRadius="10">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>