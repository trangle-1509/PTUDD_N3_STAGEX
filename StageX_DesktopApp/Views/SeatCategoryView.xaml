<UserControl x:Class="StageX_DesktopApp.Views.SeatCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="Black" Foreground="White"
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:SeatCategoryViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            
            <TextBlock Text="2. QUẢN LÝ HẠNG GHẾ" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Tên hạng (VD: VIP):" Margin="0,0,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Giá phụ thu (VNĐ):" Margin="0,0,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding BasePriceStr, UpdateSourceTrigger=PropertyChanged}" util:TextBoxHelper.IsNumeric="True"/>
                </StackPanel>

                <Button Grid.Column="2" Content="{Binding SaveBtnContent}" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ButtonAddStyle}" VerticalAlignment="Top" MinWidth="90" Height="31" Margin="0,22,0,0"/>

                <Button Grid.Column="3" Content="Hủy" 
                            Command="{Binding CancelCommand}"
                            Background="Gray" Foreground="White" Padding="10,5" Margin="10,0,0,0" VerticalAlignment="Bottom"
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Categories}" 
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
Background="Transparent" RowBackground="Transparent" 
Foreground="White" BorderThickness="0"
GridLinesVisibility="All" HorizontalGridLinesBrush="#333" VerticalGridLinesBrush="#333"
RowHeaderWidth="0" HeadersVisibility="Column"
RowHeight="31">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên Hạng" Binding="{Binding CategoryName}" Width="2*"/>
                <DataGridTextColumn Header="Giá Phụ Thu (VNĐ)" Binding="{Binding BasePrice, StringFormat='N0'}" Width="2*" ElementStyle="{StaticResource CenterCell}"/>

                <DataGridTemplateColumn Header="Màu" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding DisplayColor}" Width="20" Height="20" CornerRadius="3" BorderBrush="Gray" BorderThickness="1"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Hành động" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Center" Width="100">
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}"
            Height="28" Padding="0" Margin="0,0,3,0"/>
                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" 
            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}"
            Height="28" Padding="0" Margin="3,0,0,0"/>
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>