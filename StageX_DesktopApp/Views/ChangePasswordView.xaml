<Window x:Class="StageX_DesktopApp.Views.ChangePasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
        xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
        Title="Đổi mật khẩu" Height="450" Width="450"
        SizeToContent="Height" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Background="#FF1A1A1A" Foreground="White"
        x:Name="PwdWindow">

    <Window.DataContext>
        <vm:ChangePasswordViewModel />
    </Window.DataContext>

    <Window.Resources>
        <util:MultiValueConverter x:Key="MultiConverter"/>
    </Window.Resources>
    <!--Tạo row hiện Tiêu đề -->
    <StackPanel Margin="25">
        <TextBlock Text="ĐỔI MẬT KHẨU" FontSize="22" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>
        <!--Tạo row hiện các textbox điền thông tin -->
        <TextBlock Text="Mật khẩu hiện tại:" Margin="0,0,0,5" Foreground="Gray"/>
        <PasswordBox x:Name="pbCurrent" Style="{StaticResource InputStyle}"/>

        <TextBlock Text="Mật khẩu mới (ít nhất 3 ký tự):" Margin="0,15,0,5" Foreground="Gray"/>
        <PasswordBox x:Name="pbNew" Style="{StaticResource InputStyle}"/>

        <TextBlock Text="Xác nhận mật khẩu mới:" Margin="0,15,0,5" Foreground="Gray"/>
        <PasswordBox x:Name="pbConfirm" Style="{StaticResource InputStyle}"/>
        <!--Tạo row hiện button xác nhận -->
        <Button Content="Xác nhận đổi" 
                Margin="0,25,0,0" 
                Style="{StaticResource ButtonAddStyle}"
                Height="40" FontSize="15"
                HorizontalAlignment="Left" MinWidth="150">
            <Button.Command>
                <Binding Path="SavePasswordCommand"/>
            </Button.Command>
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource MultiConverter}">
                    <Binding ElementName="pbCurrent"/>
                    <Binding ElementName="pbNew"/>
                    <Binding ElementName="pbConfirm"/>
                    <Binding ElementName="PwdWindow"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
    </StackPanel>
</Window>