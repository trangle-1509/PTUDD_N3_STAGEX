<UserControl x:Class="StageX_DesktopApp.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             Background="#FF1A1A1A" Foreground="White">

    <UserControl.DataContext>
        <vm:ProfileViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Hiện Tiêu đề -->
        <TextBlock Grid.Row="0" Text="Hồ sơ cá nhân" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>
        <!--Tạo các TextBlock hiện thông tin tên đăng nhập và email -->
        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Border Width="60" Height="60" CornerRadius="30" Background="#FFffc107" Margin="0,0,20,0">
                    <TextBlock Text="{Binding Initial}" FontSize="32" FontWeight="Bold" Foreground="Black"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding AccountName}" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" Foreground="Gray" Margin="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <!--Tạo các textbox hiển thị và cho phép thêm/chỉnh sửa thông tin -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Họ tên"/>
                <TextBox Text="{Binding FullName}" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Địa chỉ (tùy chọn)"/>
                <TextBox Text="{Binding Address}" Style="{StaticResource InputStyle}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Ngày sinh"/>
                <DatePicker SelectedDate="{Binding DateOfBirth}" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Số điện thoại (tùy chọn)"/>
                <TextBox Text="{Binding Phone}" Style="{StaticResource InputStyle}"/>
            </StackPanel>
        </Grid>
        <!--Tạo các button Cập nhật/Đặt lại mật khẩu -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,25,0,0">

            <Button Content="Cập nhật hồ sơ" 
                    Command="{Binding SaveInfoCommand}"
                    Style="{StaticResource ButtonAddStyle}"
                    MinWidth="150" Height="35"/>

            <Button Content="Đặt lại mật khẩu" 
                    Command="{Binding ChangePasswordCommand}"
                    Style="{StaticResource ButtonSpecialStyle}"
                    Margin="15,0,0,0" MinWidth="150" Height="35"/>

        </StackPanel>
    </Grid>
</UserControl>