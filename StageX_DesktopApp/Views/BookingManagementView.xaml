<UserControl x:Class="StageX_DesktopApp.Views.BookingManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:BookingManagementViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Tạo row hiện Tiêu đề -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ ĐƠN HÀNG &amp; IN VÉ" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>
        <!--Tạo row hiện thanh textbox tìm kiếm và button tìm kiếm -->
        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tra cứu (Mã, Tên):" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding FilterCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Trạng thái:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox SelectedIndex="{Binding StatusIndex}" Padding="8" FontSize="14" Style="{StaticResource InputStyle}">
                        <ComboBoxItem Content="-- Tất cả --"/>
                        <ComboBoxItem Content="Đang xử lý"/>
                        <ComboBoxItem Content="Đã hoàn thành"/>
                        <ComboBoxItem Content="Đã hủy"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Ngày tạo đơn:" Foreground="Gray" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="🔍 Lọc" Style="{StaticResource ButtonSearchStyle}" 
                    Width="80" Command="{Binding FilterCommand}"/>
                    <Button Content="Làm mới" Style="{StaticResource ButtonNormalStyle}" 
                    Margin="10,0,0,0" Padding="0" Width="80"
                    Command="{Binding RefreshCommand}"/>

                    </StackPanel>
            </Grid>
        </Border>
        <!--Tạo row hiện datagrid các đơn hàng -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Bookings}"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="Transparent" RowBackground="#FF1E1E1E" AlternatingRowBackground="#FF252525"
                  HeadersVisibility="Column" Foreground="White" BorderThickness="0"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333">
            <!--Tạo hàng đầu gồm tên các cột dữ liệu -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="MÃ ĐƠN" Binding="{Binding BookingId}" Width="80" FontWeight="Bold" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="KHÁCH HÀNG" Binding="{Binding CustomerName}" Width="1.5*" ElementStyle="{StaticResource LeftCell}"/>
                <DataGridTextColumn Header="NGƯỜI LẬP" Binding="{Binding CreatorName}" Width="1.5*" ElementStyle="{StaticResource LeftCell}"/>
                <DataGridTemplateColumn Header="VỞ DIỄN" Width="1.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ShowTitle}" TextTrimming="CharacterEllipsis" ToolTip="{Binding ShowTitle}" Style="{StaticResource LeftCell}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="SUẤT DIỄN" Binding="{Binding PerformanceTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140" ElementStyle="{StaticResource CenterCell}"/>

                <DataGridTemplateColumn Header="GHẾ" Width="0.8*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SeatList}" TextTrimming="CharacterEllipsis" ToolTip="{Binding SeatList}" Style="{StaticResource LeftCell}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="TỔNG TIỀN" Binding="{Binding TotalAmount, StringFormat='N0'}" Width="120" FontWeight="Bold" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="NGÀY TẠO" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="140" ElementStyle="{StaticResource CenterCell}"/>

                <DataGridTemplateColumn Header="TRẠNG THÁI" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Thành công">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hoàn thành">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán POS">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                <Setter Property="Foreground" Value="#FFDC3545"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang chờ">
                                                <Setter Property="Foreground" Value="#FFffc107"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang xử lý">
                                                <Setter Property="Foreground" Value="#FFffc107"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--Tạo cột Hành động có button In vé -->
                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🖨 In Vé" Style="{StaticResource ButtonPrintStyle}" 
                                    Command="{Binding DataContext.PrintTicketCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>