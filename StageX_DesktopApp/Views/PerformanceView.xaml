<UserControl x:Class="StageX_DesktopApp.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:PerformanceViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonEditStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonDeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonNormalStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource InputStyle}">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White"/>
            </Style.Resources>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource InputStyle}"/>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ SUẤT DIỄN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#FF0C1220" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="FormTitle" Text="THÔNG TIN SUẤT DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,0,8">
                        <TextBlock Text="Vở diễn:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding ShowsList}" SelectedItem="{Binding SelectedShow}" DisplayMemberPath="Title"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,0,8"/>
                    <StackPanel Grid.Column="2" Margin="0,0,0,8">
                        <TextBlock Text="Rạp:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding TheatersList}" SelectedItem="{Binding SelectedTheater}" DisplayMemberPath="Name"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="0,0,0,8">
                        <TextBlock Text="Ngày diễn:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <DatePicker SelectedDate="{Binding PerfDate}"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Giờ bắt đầu (HH:mm):" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <TextBox Text="{Binding StartTimeStr}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Giá vé (VNĐ):" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <TextBox Text="{Binding PriceStr}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Trạng thái:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <ComboBox SelectedIndex="{Binding StatusIndex}">
                            <ComboBoxItem Content="Đang mở bán"/>
                            <ComboBoxItem Content="Đã hủy"/>
                            <ComboBoxItem Content="Đã kết thúc"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="{Binding SaveBtnContent}" Command="{Binding SaveCommand}" Style="{StaticResource ButtonAddStyle}" Width="125" Height="29"/>
                        <Button Content="Hủy" Command="{Binding ClearFormCommand}" Style="{StaticResource ButtonNormalStyle}" Margin="10,0,0,0" Width="31"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="#FF0C1220" Padding="12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tìm theo tên vở diễn:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                    <TextBox Text="{Binding SearchShowName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoadPerformancesCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Lọc theo rạp:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding FilterTheaters}" SelectedItem="{Binding SelectedFilterTheater}" DisplayMemberPath="Name"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Lọc theo ngày:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                    <DatePicker SelectedDate="{Binding SelectedFilterDate}"/>
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Lọc" Command="{Binding LoadPerformancesCommand}" Style="{StaticResource ButtonEditStyle}" 
                            Width="80" Height="32" Margin="0"/>
                    <Button Content="Xóa" Command="{Binding ClearFilterCommand}" Style="{StaticResource ButtonNormalStyle}" 
                            Width="60" Height="32" Margin="8,0,0,0" Padding="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Text="DANH SÁCH SUẤT DIỄN" FontSize="16" FontWeight="SemiBold" Foreground="#FFffc107" Margin="0,0,0,8"/>

        <DataGrid Grid.Row="4" ItemsSource="{Binding Performances}" 
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  Foreground="White" BorderThickness="0"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333"
                  RowHeaderWidth="0" Background="Transparent" RowBackground="Transparent">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,12"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PerformanceId}" Width="50" Visibility="Collapsed"/>
                <DataGridTextColumn Header="VỞ DIỄN" Binding="{Binding ShowTitle}" Width="2*"/>
                <DataGridTextColumn Header="RẠP" Binding="{Binding TheaterName}" Width="*"/>
                <DataGridTextColumn Header="NGÀY DIỄN" Binding="{Binding PerformanceDate, StringFormat='dd/MM/yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="GIỜ" Binding="{Binding StartTime, StringFormat='hh\\:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="GIÁ VÉ" Binding="{Binding Price, StringFormat='N0'}" Width="Auto"/>

                <DataGridTemplateColumn Header="TRẠNG THÁI" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang mở bán">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                <Setter Property="Foreground" Value="#FFDC3545"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã kết thúc">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="HÀNH ĐỘNG">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"/>
                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>