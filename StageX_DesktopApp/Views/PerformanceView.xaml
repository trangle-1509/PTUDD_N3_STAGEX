<UserControl x:Class="StageX_DesktopApp.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:PerformanceViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Hiển thị Tiêu đề -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ SUẤT DIỄN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#FF0C1220" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="FormTitle" Text="THÔNG TIN SUẤT DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>
                <!--Tạo các textbox thêm/chỉnh sửa thông tin -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,0,8">
                        <TextBlock Text="Vở diễn:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding ShowsList}" SelectedItem="{Binding SelectedShow}" DisplayMemberPath="Title" IsEnabled="{Binding IsDetailEditable}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,0,8"/>
                    <StackPanel Grid.Column="2" Margin="0,0,0,8">
                        <TextBlock Text="Rạp:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding TheatersList}" SelectedItem="{Binding SelectedTheater}" DisplayMemberPath="Name" IsEnabled="{Binding IsDetailEditable}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="0,0,0,8">
                        <TextBlock Text="Ngày diễn:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <DatePicker SelectedDate="{Binding PerfDate}" IsEnabled="{Binding IsDetailEditable}">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>
                </Grid>
                <!--Tạo các textbox thêm/chỉnh sửa thông tin và button Thêm/Sửa suất diễn và button Hủy -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Thời gian diễn (Bắt đầu - Kết thúc):" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>

                                <ColumnDefinition Width="20"/>

                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>

                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" ItemsSource="{Binding HoursList}" SelectedItem="{Binding SelectedHour}" IsEnabled="{Binding IsDetailEditable}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat={}{0:00}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>

                            <ComboBox Grid.Column="2" ItemsSource="{Binding MinutesList}" SelectedItem="{Binding SelectedMinute}" IsEnabled="{Binding IsDetailEditable}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat={}{0:00}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Grid.Column="4" Text="➔" VerticalAlignment="Center" Foreground="Gray"/>

                            <TextBox Grid.Column="6" Text="{Binding EndTimeStr, Mode=OneWay}" IsReadOnly="True" IsEnabled="{Binding IsDetailEditable}" Style="{StaticResource InputStyle}" ToolTip="Giờ kết thúc (Tự động tính theo thời lượng)"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Giá vé (VNĐ):" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>
                        <TextBox Text="{Binding PriceStr}" IsEnabled="{Binding IsDetailEditable}" util:TextBoxHelper.IsNumeric="True" />
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Trạng thái:" Margin="0,0,0,3" Foreground="Gray" FontSize="12"/>

                        <ComboBox ItemsSource="{Binding StatusOptions}" 
              SelectedItem="{Binding SelectedStatus}"
              IsEnabled="{Binding IsStatusEnabled}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="Đang mở bán">
                                                        <Setter Property="Foreground" Value="#FF198754"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="Đã hủy">
                                                        <Setter Property="Foreground" Value="#FFDC3545"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Top" Height="29" Margin="0,22,0,0">
                        <Button Content="{Binding SaveBtnContent}" Command="{Binding SaveCommand}" Style="{StaticResource ButtonAddStyle}" Width="120" Height="29"/>
                        <Button Content="Hủy" Command="{Binding ClearFormCommand}" Style="{StaticResource ButtonNormalStyle}" Margin="10,0,0,0" Width="100"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        <!--Tạo các textbox tìm kiếm, combobox lọc và button tìm kiếm -->
        <Border Grid.Row="2" Background="#FF0C1220" Padding="12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tìm theo tên vở diễn:" Margin="0,0,0,3" Foreground="Gray"/>
                    <TextBox Text="{Binding SearchShowName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoadPerformancesCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Lọc theo rạp:" Margin="0,0,0,3" Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding FilterTheaters}" SelectedItem="{Binding SelectedFilterTheater}" DisplayMemberPath="Name"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Lọc theo ngày:" Margin="0,0,0,3" Foreground="Gray"/>
                    <DatePicker SelectedDate="{Binding SelectedFilterDate}"/>
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Lọc" Command="{Binding LoadPerformancesCommand}" Style="{StaticResource ButtonEditStyle}" 
                            Width="80" Height="32" Margin="0"/>
                    <Button Content="Xóa" Command="{Binding ClearFilterCommand}" Style="{StaticResource ButtonNormalStyle}" 
                            Width="60" Height="32" Margin="8,0,0,0" Padding="0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--Hiện Tiêu đề -->
        <TextBlock Grid.Row="3" Text="DANH SÁCH SUẤT DIỄN" FontSize="16" FontWeight="SemiBold" Foreground="#FFffc107" Margin="0,0,0,8"/>
        <!--Tạo datagrid các suất diễn -->
        <DataGrid Grid.Row="4" ItemsSource="{Binding Performances}" 
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  Foreground="White" BorderThickness="0"
                  GridLinesVisibility="All" HorizontalGridLinesBrush="#333" VerticalGridLinesBrush="#333"
                  RowHeaderWidth="0" RowHeight="30" Background="Transparent" RowBackground="Transparent" FontSize="13">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,12"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <!--Tạo hàng đầu gồm tên các cột dữ liệu -->
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="VỞ DIỄN" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ShowTitle}" TextTrimming="CharacterEllipsis" ToolTip="{Binding ShowTitle}" Style="{StaticResource LeftCell}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="RẠP" Binding="{Binding TheaterName}" Width="150" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="NGÀY DIỄN" Binding="{Binding PerformanceDate, StringFormat='dd/MM/yyyy'}" Width="150" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="GIỜ" Binding="{Binding StartTime, StringFormat='hh\\:mm'}" Width="100" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="GIÁ VÉ" Binding="{Binding Price, StringFormat='N0'}" Width="100" ElementStyle="{StaticResource CenterCell}"/>

                <DataGridTemplateColumn Header="TRẠNG THÁI" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang mở bán">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                <Setter Property="Foreground" Value="#FFDC3545"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã kết thúc">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--Tạo cột Hành động gồm các button Sửa/Xóa -->
                <DataGridTemplateColumn Header="HÀNH ĐỘNG">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Center" Width="140">
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="0,0,3,0"/>
                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" 
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="3,0,0,0"/>
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>