<UserControl x:Class="StageX_DesktopApp.Views.ShowManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:ShowViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ButtonEditStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ButtonDeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ButtonNormalStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="5" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="QUẢN LÝ VỞ DIỄN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,10"/>

                    <TextBlock Text="Tiêu đề:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Đạo diễn:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding Director}"/>

                    <TextBlock Text="Thời lượng (phút):" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding Duration}"/>

                    <TextBlock Text="Link Poster:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding PosterUrl}"/>

                    <TextBlock Text="Thể loại (Check để chọn):" Margin="0,10,0,5" Foreground="Gray"/>
                    <ListBox ItemsSource="{Binding GenresList}" Height="120">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="White"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Diễn viên (Check để chọn):" Margin="0,15,0,5" Foreground="Gray"/>
                    <ListBox ItemsSource="{Binding ActorsList}" Height="120">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="White"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Mô tả:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding Description}" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="{Binding SaveBtnContent}" Command="{Binding SaveCommand}" Style="{StaticResource ButtonAddStyle}"/>
                        <Button Content="Làm mới" Command="{Binding ClearCommand}" Style="{StaticResource ButtonNormalStyle}" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

        <Grid Grid.Column="2" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tra cứu theo tên:" Margin="0,0,10,5" Foreground="Gray"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoadShowsCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Lọc theo thể loại:" Margin="0,0,10,5" Foreground="Gray"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                              ItemsSource="{Binding FilterGenres}" 
                              SelectedItem="{Binding SelectedFilterGenre}" 
                              DisplayMemberPath="GenreName" 
                              Padding="6" Margin="0,0,10,0"/>

                    <Button Grid.Row="1" Grid.Column="2" Content="Lọc" Command="{Binding LoadShowsCommand}" 
                            Style="{StaticResource ButtonEditStyle}" Padding="15,6" FontWeight="Bold"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="1" Text="DANH SÁCH VỞ DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"/>

            <DataGrid Grid.Row="2" ItemsSource="{Binding Shows}" AutoGenerateColumns="False" IsReadOnly="True"
                      Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333" RowHeaderWidth="0"
                      HeadersVisibility="Column">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="TIÊU ĐỀ" Binding="{Binding Title}" Width="1.5*"/>
                    <DataGridTextColumn Header="ĐẠO DIỄN" Binding="{Binding Director}" Width="*"/>
                    <DataGridTextColumn Header="THỜI LƯỢNG" Binding="{Binding DurationMinutes}" Width="Auto"/>
                    <DataGridTextColumn Header="THỂ LOẠI" Binding="{Binding GenresDisplay}" Width="*"/>
                    <DataGridTextColumn Header="DIỄN VIÊN" Binding="{Binding ActorsDisplay}" Width="1.5*"/>

                    <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>