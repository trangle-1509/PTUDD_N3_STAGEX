<UserControl x:Class="StageX_DesktopApp.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:AccountViewModel/>
    </UserControl.DataContext>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Tạo row hiện Tiêu đề -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ TÀI KHOẢN" FontSize="24" Foreground="#FFffc107" FontWeight="Bold" Margin="0,0,0,15"/>
        <!--Tạo row hiện các textbox thêm/chỉnh sửa thông tin -->
        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="5" 
                Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="{Binding FormTitle}" FontSize="18" 
                           FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5,0,5,0">
                        <TextBlock Text="Tên tài khoản:" Margin="0,5,0,5" Foreground="Gray"/>
                        <TextBox Text="{Binding AccountName, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsDetailEditable}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <TextBlock Text="Email:" Margin="0,5,0,5" Foreground="Gray"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsDetailEditable}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Mật khẩu:" Margin="0,5,0,5" Foreground="Gray"/>
                        <PasswordBox x:Name="PasswordBox" IsEnabled="{Binding IsDetailEditable}"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5,0,15,0">
                        <TextBlock Text="Họ tên:" Margin="0,0,0,5" Foreground="Gray"/>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                 IsEnabled="{Binding IsDetailEditable}" 
                 Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <TextBlock Text="Vai trò:" Margin="0,0,0,5" Foreground="Gray"/>
                        <ComboBox SelectedIndex="{Binding RoleIndex}" Padding="8" Style="{StaticResource InputStyle}">
                            <ComboBoxItem Content="Nhân viên"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                        <TextBlock Text="Trạng thái:" Margin="0,0,0,5" Foreground="Gray"/>
                        <ComboBox SelectedIndex="{Binding StatusIndex}" 
                  IsEnabled="{Binding IsStatusEnabled}" 
                  Padding="8" 
                  Style="{StaticResource InputStyle}">
                            <ComboBoxItem Content="hoạt động"/>
                            <ComboBoxItem Content="khóa"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">

                        <Button Content="{Binding SaveBtnContent}" 
                Style="{StaticResource ButtonAddStyle}" 
                Width="140" Height="32" 
                Click="SaveButton_Click"/>

                        <Button Content="Làm mới" 
                Command="{Binding ClearCommand}" 
                Style="{StaticResource ButtonNormalStyle}" 
                Margin="10,0,0,0" 
                Width="100" Height="32"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        <!--Tạo row hiện tiêu đề -->
        <TextBlock Grid.Row="2" Text="DANH SÁCH TÀI KHOẢN" FontSize="18" FontWeight="SemiBold" 
                   Foreground="#FFffc107" Margin="0,20,0,10"/>
        <!--Tạo row hiện datagrid các tài khoản -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding Accounts}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  Background="Transparent" RowBackground="Transparent" 
                  Foreground="White" BorderThickness="0"
                  GridLinesVisibility="All" HorizontalGridLinesBrush="#333" VerticalGridLinesBrush="#333"
                  RowHeaderWidth="0" HeadersVisibility="Column"
                  RowHeight="30">
            <!--Tạo hàng đầu gồm tên các cột dữ liệu -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="HỌ TÊN" Binding="{Binding UserDetail.FullName}" Width="1.5*"/>
                <DataGridTextColumn Header="TÊN TÀI KHOẢN" Binding="{Binding AccountName}" Width="*"/>
                <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="2*"/>
                <DataGridTextColumn Header="VAI TRÒ" Binding="{Binding Role}" Width="*" ElementStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="TRẠNG THÁI" Binding="{Binding Status}" Width="*" ElementStyle="{StaticResource CenterCell}"/>
                <!--Tạo cột Hành động gồm các button Sửa/Xóa -->
                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Center" Width="100">
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="0,0,3,0"/>
                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" 
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="3,0,0,0"/>  
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>