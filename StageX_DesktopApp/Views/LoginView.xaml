<Window x:Class="StageX_DesktopApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="StageX - Đăng nhập" 
        Height="500" Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Background="#FF1A1A1A" Foreground="White">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <StackPanel Margin="30">
        <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="22" FontWeight="Bold" Foreground="#FFffc107" HorizontalAlignment="Center" Margin="0,10,0,30"/>

        <TextBlock Text="Email / Tên đăng nhập:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Identifier, UpdateSourceTrigger=PropertyChanged}" 
                 Padding="10" FontSize="14"/>

        <TextBlock Text="Mật khẩu:" Margin="0,15,0,5"/>
        <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14"/>

        <Button Content="Đăng nhập" 
                Margin="0,30,0,0" Padding="15" FontSize="16" FontWeight="Bold" Background="#FFffc107" Foreground="Black"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                IsEnabled="{Binding IsNotLoading}"/>

        <TextBlock Text="{Binding ErrorMessage}" 
                   Margin="0,15,0,0" 
                   Foreground="#FFDC3545" FontSize="14"           
                   FontWeight="Bold"
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
    </StackPanel>
</Window>