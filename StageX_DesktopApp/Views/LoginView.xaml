<Window x:Class="StageX_DesktopApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="StageX - Đăng nhập" 
        Height="500" Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Background="#FF1A1A1A" Foreground="White">
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>
    
    <StackPanel Margin="30">
        <!-- Hiện Tiêu đề -->
        <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="22" FontWeight="Bold" Foreground="#FFffc107" HorizontalAlignment="Center" Margin="0,10,0,30"/>
        <!--Hiện các textbox nhập thông tin -->
        <TextBlock Text="Email / Tên đăng nhập:" Margin="0,0,0,5" Foreground="Gray"/>
        <TextBox Text="{Binding Identifier, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource InputStyle}"/>
        <TextBlock Text="Mật khẩu:" Margin="0,15,0,5" Foreground="Gray"/>
        <PasswordBox x:Name="PasswordBox"
                     Style="{StaticResource InputStyle}"/>
        <!--Tạo button Đăng nhập -->
        <Button Content="Đăng nhập" 
                Margin="0,30,0,0"
                Style="{StaticResource ButtonSpecialStyle}" 
                Height="45" FontSize="16" 
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                IsEnabled="{Binding IsNotLoading}"
                IsDefault="True"/>
        <!--Tạo TextBlock hiển thị trạng thái -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   Margin="0,15,0,0" 
                   Foreground="#FFDC3545" FontSize="14"           
                   FontWeight="Bold"
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
    </StackPanel>
</Window>