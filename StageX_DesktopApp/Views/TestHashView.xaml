<Window x:Class="StageX_DesktopApp.Views.TestHashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
        Title="Công cụ Tạo Hash Mật khẩu" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" Background="#FF1A1A1A" Foreground="White">

    <Window.DataContext>
        <vm:TestHashViewModel />
    </Window.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="CÔNG CỤ DEV: TẠO MẬT KHẨU" FontSize="18" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>

        <TextBlock Text="Nhập mật khẩu (ví dụ: 12345678):" Foreground="Gray"/>
        <TextBox Text="{Binding PasswordToHash, UpdateSourceTrigger=PropertyChanged}" 
                 Padding="10" Margin="0,5,0,15" FontSize="14"/>

        <Button Content="Tạo Hash" Command="{Binding GenerateHashCommand}" 
                Padding="10,5" Background="#FF0D6EFD" Foreground="White" FontWeight="Bold" BorderThickness="0"/>

        <TextBlock Text="Kết quả Hash (để copy vào Database):" Margin="0,20,0,5" Foreground="Gray"/>
        <TextBox Text="{Binding ResultHash}" IsReadOnly="True" TextWrapping="Wrap" Height="60" 
                 Padding="5" Background="#333" Foreground="#0f0" BorderThickness="0"/>

        <Button Content="Copy kết quả" Command="{Binding CopyToClipboardCommand}" 
                Margin="0,10,0,0" HorizontalAlignment="Right" Padding="10,5"/>
    </StackPanel>
</Window>